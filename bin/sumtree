#!/usr/bin/env summon

import sys
import summonlib.tree
from summon import *

sumtree = summonlib.tree


# parse args
param, rest = sumtree.parseArgs(sys.argv[1:])

# title
print "SUMTREE (SUMMON Tree Visualizer)"
print "Matt Rasmussen 2005"
print

vis = sumtree.SumTree()

# read
tree = vis.readTree(param)

# draw
vis.display(param, tree)
home()


def find(name):
    return vis.find(tree, name)
