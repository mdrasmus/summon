#!/usr/bin/env summon

import sys
import summonlib.tree
from summonlib import util
from summon import *

sumtree = summonlib.tree


# parse args
try:
    param, rest = util.parseArgs(sys.argv[1:], sumtree.options)
except:
    sys.exit(1)

# title
print "SUMTREE (SUMMON Tree Visualizer)"
print "Matt Rasmussen 2005"
print

vis = sumtree.SumTree()

# read
tree = vis.readTree(param)

# draw
vis.display(param, tree)
home()


def find(name):
    return vis.find(tree, name)
