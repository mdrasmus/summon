#!/usr/bin/env summon

import sys
from summon.core import *
from summon import sumtree
from summon import util



# parse args
try:
    param, rest = util.parseArgs(sys.argv[1:], sumtree.options)
except:
    sys.exit(1)

# title
print "SUMTREE (SUMMON Tree Visualizer)"
print "Matt Rasmussen 2005"
print

vis = sumtree.SumTree()

# read
tree = vis.readTree(param)

# draw
vis.display(param, tree)
home()


def find(name):
    return vis.find(tree, name)

def mark(boxColor = color(1,0,0)):
    return vis.mark(boxColor)

def clear_marks():
    vis.clearMarks()
